{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "rootDir": "./src",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
     "moduleResolution": "node"
  },
  "include": [
    "./src",
    "./sensor/**/*"
  ]
}